root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{cpp,cc,cxx,c,h,hpp}]
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{yaml,yml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{mlir,td}]
indent_size = 2

[CMakeLists.txt]
indent_size = 2

[Makefile]
indent_style = tab